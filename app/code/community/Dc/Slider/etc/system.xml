<config>
    <sections>
        <slider translate="label" module="slider">
            <label>Slider</label>
            <tab>dc</tab>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <sort_order>1050</sort_order>
            <groups>
                <options translate="label">
                    <label>Options</label>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <folder translate="label comment">
                            <label>Images folder</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                            <comment><![CDATA[Example: /directory (do not use slash at the end). This directory gonna be placed into the /media directory.]]></comment>
                        </folder>
                     </fields>
                </options>
                <javascript translate="label">
                    <label>Javascript</label>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <jquery translate="label comment">
                            <label>Include jQuery</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Allows you to include the jQuery library. Enable this options if your store is not currently using it.]]></comment>
                        </jquery>
                        <plugin translate="label comment">
                            <label>Plugin</label>
                            <frontend_type>select</frontend_type>
                            <source_model>slider/system_config_source_plugin</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Select which plugin will be used for the Slider.]]></comment>
                        </plugin>
                    </fields>
                </javascript>
                <image translate="label">
                    <label>Slider Image Settings</label>
                    <sort_order>3</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <width translate="label comment">
                            <label>Width</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Width size (in px) used on main image.]]></comment>
                        </width>
                        <height translate="label comment">
                            <label>Height</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Height size (in px) used on main image.]]></comment>
                        </height>
                     </fields>
                </image>
                <thumbnail translate="label">
                    <label>Thumbnail Image Settings</label>
                    <sort_order>4</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <width translate="label comment">
                            <label>Width</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Width size (in px) used on thumbnails into the admin grid.]]></comment>
                        </width>
                        <height translate="label comment">
                            <label>Height</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment><![CDATA[Height size (in px) used on thumbnails into the admin grid.]]></comment>
                        </height>
                     </fields>
                </thumbnail>
            </groups>
        </slider>
    </sections>
</config>
